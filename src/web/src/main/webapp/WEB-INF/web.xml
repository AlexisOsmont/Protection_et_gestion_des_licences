<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
  	
	<!-- Home mapping -->
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>Controller.HomeController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- Login mapping -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>Controller.LoginController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Register mapping -->
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>Controller.RegisterController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<!-- product mapping -->
	<servlet>
		<servlet-name>ProductBuyController</servlet-name>
		<servlet-class>Controller.ProductBuyController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ProductBuyController</servlet-name>
		<url-pattern>/product-buy</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ProductDetailController</servlet-name>
		<servlet-class>Controller.ProductDetailController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ProductDetailController</servlet-name>
		<url-pattern>/product/*</url-pattern>
	</servlet-mapping>
	
	<!-- Filter Mapping -->
	<filter>
		<filter-name>securityFilter</filter-name>
		<filter-class>Controller.SecurityFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>securityFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>sessionFilter</filter-name>
		<filter-class>Controller.SessionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>sessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>    
	
	
  	<!-- CSS & JS -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>
	
		<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	
</web-app>